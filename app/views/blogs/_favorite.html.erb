<% if tourist_signed_in? %>
	<% if blog.favorited_by_tourist?(current_tourist) %>
		<%= link_to blog_favorites_path(blog), method: :delete, remote: true do %>
			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			<i>Awesome!</i>
			<%= blog.favorites.count %>
		<% end %>
	<% else %>
		<%= link_to blog_favorites_path(blog), method: :post, remote: true do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i>
			<i>Awesome!</i>
			<%= blog.favorites.count %>
		<% end %>
	<% end %>

<% elsif guide_signed_in? %>
	<% if blog.favorited_by_guide?(current_guide) %>
		<%= link_to blog_favorites_path(blog), method: :delete, remote: true do %>
			<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
			<i>Awesome!</i>
			<%= blog.favorites.count %>
		<% end %>
	<% else %>
		<%= link_to blog_favorites_path(blog), method: :post, remote: true do %>
			<i class="fa fa-heart-o" aria-hidden="true"></i>
			<i>Awesome!</i>
			<%= blog.favorites.count %>
		<% end %>
	<% end %>
<% end %>