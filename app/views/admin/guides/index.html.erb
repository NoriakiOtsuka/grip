<div class="container">

	<!-- Search Column -->
	<div class="col-xs-3">
		<!-- Guide search (partial template) -->
		<div class="row">
			<%= render 'admin/guides/guide-search' %>
		</div>
	</div>

	<!-- Guide Registration Information -->
	<div class="col-xs-9">
		<div class="row">
			<h3>ガイド一覧(全<%= @guides.count %>人)(admin)</h3>
		</div>
		<div class="row">
			<table class="table table-bordered table-inberse">
				<thead>
					<th width = "200">ガイドID</th>
					<th width = "200">氏名(ガイド)</th>
					<th width = "200">メールアドレス</th>
					<th width = "200">エリア</th>
					<th width = "200">ステータス</th>
				</thead>
				<% @guides.each do |guide| %>
					<tbody>
						<td><%= guide.id %></td>
						<td>
							<%= link_to admin_guide_path(guide) do %>
								<%= guide.first_name %> <%= guide.last_name %>
							<% end %>
						</td>
						<td><%= guide.email %></td>
						<td><%= guide.region %></td>
						<td><%= guide.status %></td>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>