<div class="container">

	<!-- Guide Pfofile -->
	<div class="col-xs-3">
		<div>
			<%= attachment_image_tag(current_guide, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
		</div>
		<section>
			<h4><%= current_guide.first_name %> <%= current_guide.last_name %></h4>
		</section>
		<section>
			<p>Introduction</p>
			<h5><%= current_guide.introduction %></h5>
		</section>
		<section>
			<p>Region</p>
			<h5><%= current_guide.region %></h5>
		</section>
	</div>

	<!-- Guide Registration Information -->
	<div class="col-xs-7">
		<div class="row">
			<h3>My page</h3>
		</div>
		<div class="row">
			<h4>Registration information</h4>
			<table class="table table-bordered table-inverse">
				<tr>
					<td class="info">Name</td>
					<td><%= current_guide.first_name %> <%= current_guide.last_name %></td>
				</tr>
				<tr>
					<td class="info">Birthday</td>
					<td><%= current_guide.birthday %></td>
				</tr>
				<tr>
					<td class="info">Gender</td>
					<td><%= current_guide.gender %></td>
				</tr>
				<tr>
					<td class="info">Address</td>
					<td><%= current_guide.address %></td>
				</tr>
				<tr>
					<td class="info">Phone number</td>
					<td><%= current_guide.phone %></td>
				</tr>
				<tr>
					<td class="info">E-mail</td>
					<td><%= current_guide.email %></td>
				</tr>
			</table>
		</div>
		<div>
			<%= link_to "Edit", edit_guide_path, class: "btn btn-primary btn-lg center-block" %>
			<%= link_to "Change your password",new_guide_password_path(current_guide), class: "btn btn-warning btn-lg center-block" %>
		</div>
	</div>
</div>