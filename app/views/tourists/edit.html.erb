<div class="container">
	<%= form_for(@tourist) do |f| %>

		<!-- Tourist Pfofile -->
		<div class="col-xs-3">
			<div>
				<%= f.attachment_field :profile_image, class: "profile_image" %>
			</div>
			<section>
				<p>Introduction</p>
				<h5><%= f.text_area :introduction, class: "introduction" %></h5>
			</section>
		</div>

		<!-- Tourist Registration Information -->
		<div class="col-xs-7">
			<div class="row">
				<h3>My page</h3>
			</div>
			<div class="row">
				<h4>Registration information</h4>
				<table class="table table-bordered table-inverse">
					<tr>
						<td class="info">Name</td>
						<td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %> <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
					</tr>
					<tr>
						<td class="info">Birthday</td>
						<td><%= f.date_field :birthday, autofocus: true, autocomplete: "birthday" %></td>
					</tr>
					<tr>
						<td class="info">Gender</td>
						<td>
							<%= f.radio_button :gender, :male, autofocus: true %>Male
							<%= f.radio_button :gender, :female, autofocus: true %>Female
						</td>
					</tr>
					<tr>
						<td class="info">Nationality</td>
						<td><%= f.text_field :nationality, autofocus: true, autocomplete: "nationality" %></td>
					</tr>
					<tr>
						<td class="info">Phone number</td>
						<td><%= f.text_field :phone, autofocus: true, autocomplete: "phone" %></td>
					</tr>
					<tr>
						<td class="info">E-mail</td>
						<td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
					</tr>
				</table>
				<div class="col-xs-offset-4 col-xs-4">
					<%= f.submit "Save the change", class: "btn btn-primary btn-lg center-block" %>
					<%= link_to "Withdraw", tourist_delete_me_path, class: "btn btn-warning btn-lg center-block" %>
				</div>
			</div>
		</div>
	<% end %>
</div>