<div class="container">
	<div class="row">
		<!-- Search Column -->
		<div class="col-xs-3">
			<!-- Guide search (partial template) -->
			<div class="row">
				<%= render 'guide/guides/guide-search' %>
			</div>
		</div>

		<!-- Guide Registration Information -->
		<div class="col-xs-9">
			<div class="row">
				<h3>ガイド一覧(guide)</h3>
			</div>
			<div>
				<% @guides.each do |guide| %>
					<%= link_to guide_guide_path(guide) do %>
						<%= attachment_image_tag(guide, :profile_image_id, :fill, 100, 100, fallback: "no_image.jpg") %>
						<%= guide.first_name %><%= guide.last_name %>
					<% end %>
					<%= guide.region %>
				<% end %>
			</div>
		</div>
	</div>
</div>