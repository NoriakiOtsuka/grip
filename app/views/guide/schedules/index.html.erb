<div class="container">
	<div class="row">
		<!-- Search Column -->
		<div class="col-xs-3"></div>

		<!-- Guide Registration Information -->
		<div class="col-xs-9">
			<div class="row">
				<h3>Schedule</h3>
			</div>
			<div class="row">
				<table class="table table-bordered table-inberse">
					<thead>
						<th width = "200">Date</th>
						<th width = "200">Guide name</th>
						<th width = "200">Region</th>
						<th width = "200">Status</th>
					</thead>
					<% @schedules.each do |schedule| %>
						<tbody>
							<td>
								<%= link_to guide_schedule_path(schedule.id) do %>
									<%= schedule.plan %>
								<% end %>
							</td>
							<td><%= schedule.tourist.last_name %> <%= schedule.tourist.first_name %></td>
							<td><%= schedule.guide.region %></td>
							<td><%= schedule.status %></td>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>